{% extends 'base.html.twig' %}

{% block body %}
    <h1>GolesAsistencias</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ golesAsistencia.id }}</td>
            </tr>
            <tr>
                <th>Goles</th>
                <td>{{ golesAsistencia.goles }}</td>
            </tr>
            <tr>
                <th>Asistencias</th>
                <td>{{ golesAsistencia.asistencias }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if golesAsistencia.createdAt %}{{ golesAsistencia.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if golesAsistencia.updatedAt %}{{ golesAsistencia.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resultados_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('resultados_edit', { 'id': golesAsistencia.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
